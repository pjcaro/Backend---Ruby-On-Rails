<div class="row">
  <div class="col-md-3 center-block no-float">
    <h2><i class="fa fa-user-plus" ></i> Registrarse </h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {role: "form"}) do |f| %>
      <%= devise_error_messages! %>
      <div>
        <% if session[:omniauth_errors] %>
          <div class="flash"> <%= session[:omniauth_errors] %> </div>
        <% end %>
      </div>
      <div class="field">
        <%= f.label :email, class: "form-group" %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control", value: get_email_oauth %>
      </div>

      <div class="field">
        <%= f.label :username, class: "form-group" %><br />
        <%= f.text_field :username, value: get_username_oauth, autofocus: true, class: "form-control"  %>
      </div>

      <div class="field">
        <%= f.label :password, class: "form-group" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control"  %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, class: "form-group" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control"  %>
      </div>

      <div class="actions text-center"><br>
        <%= f.submit "Registrarse", class: "btn btn-info"  %>
      </div>
    <% end %>
      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
   
  </div>
</div>
