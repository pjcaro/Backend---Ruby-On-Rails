<div class="jumbotron">
	<div class="text-center">
		
		<h1><%= @post.titulo %></h1>
		<div>
			<%= @post.contenido %>
			<% if usuario_signed_in? %>
			<%= render "payments/form", payment: Payment.new, post: @post %>
		<% end %>
		</div>
	</div>
</div>
<div class="text-right">
	<% if @post.usuario and usuario_signed_in? and @post.usuario == current_usuario %>
		<%= link_to 'Editar', edit_post_path(@post) %> 
		<%= link_to 'Eliminar',@post, method: :delete, data: {confirm: "Â¿Estas seguro de borrar el post? "} %> 
	<% end %>

	<%= link_to 'Back', posts_path %>

	
</div>

	

